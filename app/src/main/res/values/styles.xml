<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="BrainTrackePagerButton" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:minWidth">110dp</item>
        <item name="android:background">@color/primary_main</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BrainTrackeFragmentButton" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/primary_main</item>
        <item name="android:textColor">@color/accent_main</item>
    </style>

    <style name="BrainTrackeValueTextView" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:textSize">25sp</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

</resources>